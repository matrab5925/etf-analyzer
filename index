            async handleCSVUpload(file) {
                if (!file.name.endsWith('.csv')) {
                    this.showError('CSV íŒŒì¼ë§Œ ì—…ë¡œë“œ ê°€ëŠ¥í•©ë‹ˆë‹¤.');
                    return;
                }

                this.showLoading(true);
                this.hideMessages();

                try {
                    const text = await file.text();
                    const lines = text.trim().split('\n');
                    const data = [];

                    // Skip header row
                    for (let i = 1; i < lines.length; i++) {
                        const [date, close] = lines[i].split(',');
                        if (date && close && !isNaN(parseFloat(close))) {
                            data.push({
                                date: date.trim(),
                                close: parseFloat(close)
                            });
                        }
                    }

                    if (data.length < 10) {
                        throw new Error('ìµœì†Œ 10ê°œì˜ ë°ì´í„° í¬ì¸íŠ¸ê°€ í•„ìš”í•©ë‹ˆë‹¤.');
                    }

                    // Sort by date
                    data.sort((a, b) => new Date(a.date) - new Date(b.date));

                    this.data = data;
                    this.currentTicker = 'CUSTOM-DATA';
                    this.performAnalysis();
                    this.updateDisplay();
                    this.showResults(true);
                    this.showSuccess(`âœ… CSV íŒŒì¼ ì—…ë¡œë“œ ì„±ê³µ: ${data.length}ê°œ ë°ì´í„° í¬ì¸íŠ¸ ë¶„ì„ ì™„ë£Œ`);

                    // Update ticker field
                    document.getElementById('ticker').value = 'CUSTOM-DATA';

                } catch (error) {
                    this.showError('CSV íŒŒì¼ ì²˜ë¦¬ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤: ' + error.message);
                } finally {
                    this.showLoading(false);
                }
            }

            sleep(ms) {
                return new Promise(resolve => setTimeout(resolve, ms));
            }

            showLoading(show) {
                document.getElementById('loading').style.display = show ? 'block' : 'none';
                document.getElementById('analyzeBtn').disabled = show;
                
                if (show) {
                    // Animate loading text
                    const loadingTexts = [
                        'ETF ë°ì´í„°ë¥¼ ìƒì„±í•˜ëŠ” ì¤‘ì…ë‹ˆë‹¤...',
                        'ì‹œì¥ íŒ¨í„´ì„ ì‹œë®¬ë ˆì´ì…˜ ì¤‘ì…ë‹ˆë‹¤...',
                        'í†µê³„ ì§€í‘œë¥¼ ê³„ì‚°í•˜ëŠ” ì¤‘ì…ë‹ˆë‹¤...',
                        'Z-Score ë¶„ì„ì„ ì§„í–‰ ì¤‘ì…ë‹ˆë‹¤...'
                    ];
                    let textIndex = 0;
                    this.loadingInterval = setInterval(() => {
                        document.getElementById('loadingText').textContent = loadingTexts[textIndex];
                        textIndex = (textIndex + 1) % loadingTexts.length;
                    }, 400);
                } else {
                    if (this.loadingInterval) {
                        clearInterval(this.loadingInterval);
                    }
                }
            }

            showResults(show) {
                document.getElementById('results').style.display = show ? 'block' : 'none';
            }

            showError(message) {
                const errorElement = document.getElementById('errorMessage');
                errorElement.textContent = message;
                errorElement.style.display = 'block';
                setTimeout(() => {
                    errorElement.style.display = 'none';
                }, 5000);
            }

            showSuccess(message) {
                const successElement = document.getElementById('successMessage');
                successElement.textContent = message;
                successElement.style.display = 'block';
                setTimeout(() => {
                    successElement.style.display = 'none';
                }, 5000);
            }

            hideMessages() {
                document.getElementById('errorMessage').style.display = 'none';
                document.getElementById('successMessage').style.display = 'none';
            }
        }

        // Initialize the analyzer when the page loads
        document.addEventListener('DOMContentLoaded', () => {
            new ETFAnalyzer();
        });
    </script>
